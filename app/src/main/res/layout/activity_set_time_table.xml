<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetTimeTable">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <Spinner
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:id="@+id/set_member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="24dp"/>


        <RadioButton
            android:id="@+id/set_sunday"
            android:textAlignment="center"
            android:layoutDirection="rtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="SUNDAY"
            android:autofillHints="" />

        <RadioButton
            android:id="@+id/set_monday"
            android:textAlignment="center"
            android:layoutDirection="rtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="MONDAY"
            android:autofillHints="" />

        <RadioButton
            android:id="@+id/set_tuesday"
            android:textAlignment="center"
            android:layoutDirection="rtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="TUESDAY"
            android:autofillHints="" />

        <RadioButton
            android:id="@+id/set_wednesday"
            android:textAlignment="center"
            android:layoutDirection="rtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="WEDNESDAY" />

        <RadioButton
            android:id="@+id/set_thursday"
            android:textAlignment="center"
            android:layoutDirection="rtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="THURSDAY" />

        <RadioButton
            android:id="@+id/set_friday"
            android:textAlignment="center"
            android:layoutDirection="rtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="FRIDAY"
            android:autofillHints="" />

        <RadioButton
            android:id="@+id/set_saturday"
            android:textAlignment="center"
            android:layoutDirection="rtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="SATURDAY"
            android:autofillHints="" />
        <Button
            android:id="@+id/deselectRButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESELECT ALL THE RADIO BUTTON"/>
        <Button
            android:id="@+id/set_mark_button"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SET-TIME-TABLE" />

    </LinearLayout>

</ScrollView>