<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetTimeTable">
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <EditText
            android:textAlignment="center"
            android:id="@+id/set_member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="MEMBER-NAME"
            android:inputType="textPersonName"
            android:autofillHints="" />


        <EditText
            android:id="@+id/set_sunday"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0/1 SUNDAY"
            android:inputType="number"
            android:autofillHints="" />

        <EditText
            android:id="@+id/set_monday"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0/1 MONDAY"
            android:inputType="number"
            android:autofillHints="" />

        <EditText
            android:id="@+id/set_tuesday"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0/1 TUESDAY"
            android:inputType="number"
            android:autofillHints="" />

        <EditText
            android:id="@+id/set_wednesday"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0/1 WEDNESDAY"
            android:inputType="number" />

        <EditText
            android:id="@+id/set_thursday"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0/1 THURSDAY"
            android:inputType="number" />

        <EditText
            android:id="@+id/set_friday"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0/1 FRIDAY"
            android:inputType="number"
            android:autofillHints="" />

        <EditText
            android:id="@+id/set_saturday"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0/1 SATURDAY"
            android:inputType="number"
            android:autofillHints="" />

        <Button
            android:id="@+id/set_mark_button"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SET-TIME-TABLE" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>