<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="#B0FFA500"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DHARMVIR DHARMACHARYA"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#A9A9A9"
            android:id="@+id/markAttendanceMemberName"
            />
            <RadioGroup
                android:id="@+id/markAttendanceRadioGrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/markAttendanceRadioBtn0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A9A9A9"
                    android:textStyle="bold"
                    android:text="ABSENT"/>
                <RadioButton
                    android:id="@+id/markAttendanceRadioBtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A9A9A9"
                    android:textStyle="bold"
                    android:text="PRESENT"/>
                <RadioButton
                    android:id="@+id/markAttendanceRadioBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A9A9A9"
                    android:textStyle="bold"
                    android:text="INFO-ABS"/>
                <RadioButton
                    android:id="@+id/markAttendanceRadioBtn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A9A9A9"
                    android:textStyle="bold"
                    android:text="EXT-PST"/>
            </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/markAttendanceData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT DATE"
                />
            <Button
                android:id="@+id/markAttendanceBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MARK ATTENDANCE"
                />
        </LinearLayout>

        </LinearLayout>
</androidx.cardview.widget.CardView>